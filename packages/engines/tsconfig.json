{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "rootDir": "src",
    "paths": {
      "preact": ["./node_modules/preact"],
      "preact/hooks": ["./node_modules/preact/hooks"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
